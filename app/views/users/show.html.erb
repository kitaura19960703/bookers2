<div class='container px-5 px-sm-0'>
 <div class='row'>
  <%= render 'books/sidebar', user: @user, book: @new_book %>
  <div class='col-md-8 offset-md-1'>
   <br><br>
   <h1>Books</h1>
   <table class ="table table-hover">
    <thead>
     <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan = "3"></th>
     </tr>
    </thead>
    <body>
     <% @books.each do |book| %>
      <tr>
       <td><%= link_to user_path(book.user), class: 'hoge' do %>
         <%= attachment_image_tag book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg",size: '40x40' %>
        <% end %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
       <td><%= book.body %></td>
      </tr>
     <% end %>
    </body>
   </table>
  </div>
 </div>
</div>