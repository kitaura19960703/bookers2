<div class='container px-5 px-sm-0'>
 <div class='row'>
  <%= render 'books/sidebar', user: @user, book: @new_book %>
  <div class='col-md-8 offset-md-1'>
    <br><br>
    <h2>Book detail</h2>
    <table class ="table table-hover">
      <body>
        <tr>
          <td><%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg",size:'40x40' %>
            <br><%= link_to @user.name, user_path(@user.id) %>
          </td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <% if current_user == @user %>
          <td><%= link_to 'Edit',edit_book_path(@book.id), class: 'btn btn-success' %></td>
          <td><%= link_to 'Destroy',book_path(@book.id), method: :delete, class: 'btn btn-danger' %></td>
          <% end %>
        </tr>
      </body>
    </table>
  </div>
 </div>
</div>